FROM congliu0913/ros2:openvino-2019-R3

MAINTAINER Liu Cong "congliu0913@126.com"

ARG DEPS_DIR=/root/deps

#install opencv
WORKDIR $DEPS_DIR
RUN apt-get update && apt-get install -y build-essential \
        libgtk2.0-dev \
        pkg-config \
        libavcodec-dev \
        libavformat-dev \
        libswscale-dev \
        python-dev \
        python-numpy \
        libtbb2 \
        libtbb-dev \
        libjpeg-dev \
        libpng-dev \
        libtiff-dev \
        libdc1394-22-dev
RUN git clone --depth 1 https://github.com/opencv/opencv.git -b 3.4.2
RUN git clone --depth 1 https://github.com/opencv/opencv_contrib.git -b 3.4.2
WORKDIR $DEPS_DIR/opencv
RUN git clone --depth 1 https://github.com/opencv/opencv_3rdparty -b ippicv/master_20180518 .cache/ippicv_download
RUN mkdir -p .cache/ippicv &&cp -rvf .cache/ippicv_download/ippicv/ippicv_2017u3_lnx_intel64_general_20180518.tgz .cache/ippicv/b7cc351267db2d34b9efa1cd22ff0572-ippicv_2017u3_lnx_intel64_general_20180518.tgz
RUN mkdir build && cd build
WORKDIR $DEPS_DIR/opencv/build
RUN cmake -DOPENCV_EXTRA_MODULES_PATH=$DEPS_DIR/opencv_contrib/modules -DCMAKE_INSTALL_PREFIX=/usr/local -DBUILD_opencv_cnn_3dobj=OFF ..
RUN cmake -DOPENCV_EXTRA_MODULES_PATH=$DEPS_DIR/opencv_contrib/modules \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr/local \
    -DBUILD_opencv_cnn_3dobj=OFF \
    -DBUILD_LIST="core,imgproc,plot,tracking,highgui,videoio,aruco" \
    ..
RUN make -j12
RUN make install
RUN ldconfig

